<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/tienda_bg"
    tools:context=".Signup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:text="Személyes adatok"
            android:textSize="36dp"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-60dp"
            android:orientation="vertical"
            android:padding="20dp">


            <EditText
                android:id="@+id/signup_email"
                android:layout_width="388dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/blue_border"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:hint="Email cím*"
                android:padding="8dp" />

            <EditText
                android:id="@+id/signup_lastname"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/blue_border"
                android:drawableLeft="@drawable/baseline_account_circle_24"
                android:drawablePadding="8dp"
                android:hint="Vezetéknév*"
                android:padding="8dp" />

            <EditText
                android:id="@+id/signup_firstname"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="-60dp"
                android:background="@drawable/blue_border"
                android:drawableLeft="@drawable/baseline_account_circle_24"
                android:drawablePadding="8dp"
                android:hint="Keresztnév*"
                android:padding="8dp" />

            <EditText
                android:id="@+id/signup_city"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/blue_border"
                android:drawableLeft="@drawable/baseline_add_home_work_24"
                android:drawablePadding="8dp"
                android:hint="Város*"
                android:padding="8dp" />

            <EditText
                android:id="@+id/signup_street_name"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="-60dp"
                android:background="@drawable/blue_border"
                android:drawableLeft="@drawable/baseline_holiday_village_24"
                android:drawablePadding="8dp"
                android:hint="Utca, út stb*"
                android:padding="8dp" />

            <EditText
                android:id="@+id/signup_street_number"
                android:layout_width="388dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/blue_border"
                android:drawableLeft="@drawable/baseline_house_24"
                android:drawablePadding="8dp"
                android:hint="Házszám*/Emelet/Lakásszám"
                android:padding="8dp" />

            <TextView
                android:layout_width="420dp"
                android:layout_height="100dp"
                android:text="Bejelentkezéshez szükséges adatok"
                android:textSize="26dp"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/signup_username"
                android:layout_width="388dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="-30dp"
                android:background="@drawable/blue_border"
                android:drawableLeft="@drawable/baseline_groups_2_24"
                android:drawablePadding="8dp"
                android:hint="Felhasználóneve*"
                android:padding="8dp" />

            <EditText
                android:id="@+id/signup_password"
                android:layout_width="388dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/blue_border"
                android:drawableLeft="@drawable/baseline_password_24"
                android:drawablePadding="8dp"
                android:hint="Jelszava*"
                android:inputType="textPassword"
                android:padding="8dp" />

            <EditText
                android:id="@+id/signup_confirm"
                android:layout_width="388dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/blue_border"
                android:drawableLeft="@drawable/baseline_password_24"
                android:drawablePadding="8dp"
                android:hint="Jelszava újra*"
                android:inputType="textPassword"
                android:padding="8dp" />
            
            <Button
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="Regisztrálás"
                android:id="@+id/signup_button"
                android:textSize="25dp"
                android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
                app:cornerRadius = "30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loginRedirectText"
                android:text="Van már fiókod? Jelentkezz be"
                android:textColor="@color/white"
                android:layout_gravity="center"/>
            

        </LinearLayout>

    </LinearLayout>
</ScrollView>